<Window x:Class="Akmetron.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Akmetron"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300" ResizeMode="CanMinimize">
    <StackPanel Margin="10" HorizontalAlignment="Center">
        <TextBlock Text="Добро пожаловать!" FontSize="24"/>
        <StackPanel  Margin="0,20" HorizontalAlignment="Center">
            <Button Command="{Binding CreateCommand}" Margin="0,10">Создать процедуру</Button>
            <Button Command="{Binding DownloadCommand}"  Margin="0,10">Загрузить процедуру</Button>
        </StackPanel>
    </StackPanel>
</Window>
